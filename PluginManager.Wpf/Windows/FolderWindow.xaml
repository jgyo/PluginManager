<Window
    x:Class="PluginManager.Wpf.Windows.FolderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dt="clr-namespace:PluginManager.Core.ViewModels.DesignTime;assembly=PluginManager.Core"
    xmlns:local="clr-namespace:PluginManager.Wpf.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:PluginManager.Wpf.Views"
    Title="Folder Information"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=dt:FolderViewModelDesignTime,
                                     IsDesignTimeCreatable=True}"
    Icon="\Resources\Folder.ico"
    mc:Ignorable="d">
    <Grid>
        <views:FolderView />
    </Grid>
</Window>